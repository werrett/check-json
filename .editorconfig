# Unifying the coding style for different editors
# See http://editorconfig.org

# indicate this is the root of the project
root = true

# Common
[*]
charset = utf-8

end_of_line = LF
insert_final_newline = true
trim_trailing_whitespace = true

indent_style = space
indent_size = 2

# Markdown
[*.md]
trim_trailing_whitespace = false

# YAML
[*.{yaml,yml}]
indent_size = 2

# Golang
[*.go]
indent_style = tab
